
<% provide(:title, "Log in") %>
<div class="home_page">

  <% if logged_in? %>
  <div class="container logged_in_section">

    <h3 class="text-center">Welcome Back!</h3>
    <h2 class="text-center">My Courses </h2>
          <% Enrollment.where(user_id: current_user.id).each do |courses| %>
          <div class="row individual_course">
          <%=Course.find(courses.course_id).name%> - <%=Course.find(courses.course_id).code%>
          <p> <%=Course.find(courses.course_id).description %>
            <div class="col-md-2">
          </div>
            </div>

          <% end %>


</div>
  <% else %>
  <div class="container text-center not_logged_in">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3 class="text-center">Welcome to Aaron Gold's PA1 Please Login or Sign Up</h3>
        <p>Log in</p>
        <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <p>New user?
            <%= link_to "Sign up now!",  new_user_path %></p>
    </div>
</div>
</div>
    <% end %>
</div>
