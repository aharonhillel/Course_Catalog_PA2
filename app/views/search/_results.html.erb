<div class="container">
    <h3 class="text-center">Search Results
    </h3>
    <% @courses.each do |course| %>
    <div class="row individual_course">
        <%= link_to "#{course.name}", course %>
        <br/>
        <div class="col-md-10 offset-md-2"><%= course.description %>
            -
            <%= course.code %></div>
        <div class="col-md-10 offset-md-2">
            Independent Study:
            <% if course.independent_study == true %>
            <%= link_to fa_icon("check")%>
        <% else%>
            <%= link_to fa_icon("times")%>
            <br/><br/>
            <div class="col-md-3">
                <%= button_to 'Enroll', {:controller => "enrollments", :action => "create", :course_id => course.id,  :user_id=> session[:user_id].to_i}, :method=>:post, :class => "btn btn-default", role: "button", :unique => true %>
            </div>
            <% end %>
        </div>
    </div>
    <% end %>
