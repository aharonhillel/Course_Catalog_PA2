
<% provide(:title, "Log in") %>
<div class="home_page">

  <% if logged_in? %>
  <div class="text-center logged_in_section">
    <h3 class="text-center">Welcome Back!</h3>
  <h4>You are already logged in. Please select a section from the top Nav bar</h4>

</div>
  <% else %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3 class="text-center">Welcome to Aaron Gold's PA1 Please Login or Sign Up</h3>
        <p>Log in</p>
        <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <p>New user?
            <%= link_to "Sign up now!",  new_user_path %></p>
    </div>
</div>
    <% end %>
</div>
