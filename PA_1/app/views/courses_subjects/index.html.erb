<h1>Courses Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_subjects.each do |courses_subject| %>
      <tr>
        <td><%= courses_subject.course_id %></td>
        <td><%= courses_subject.subject_id %></td>
        <td><%= link_to 'Show', courses_subject %></td>
        <td><%= link_to 'Edit', edit_courses_subject_path(courses_subject) %></td>
        <td><%= link_to 'Destroy', courses_subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

